Public Sub DrawingArea1_MouseWheel()

  If Mouse.Delta > 0 Then
    shades = shades * 2
    If shades > 256 Then shades = 256
      Else
    shades = shades Div 2
    If shades < 2 Then shades = 2
  Endif
  drawingarea1.Refresh
  
  
End
