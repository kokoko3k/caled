  answer = Message.Question("Read video LUT from selected display?", "yes", "no")
  If answer = "1" Then 
    Try Kill "/tmp/calfile"
    Shell "dispwin -d " & Display() & " -s " & "/tmp/calfile" Wait
    Try ParseCalFile("/tmp/calfile")
    SaveUndo()
  Endif
End


